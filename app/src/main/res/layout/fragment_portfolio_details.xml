<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/portfolio_details_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/portfolio_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/portfolio_details_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/portfolio_details_github_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GitHub Repository"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/portfolio_details_live_demo_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Live Demo"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true" />
</LinearLayout>
